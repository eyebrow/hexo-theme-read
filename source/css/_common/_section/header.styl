.header {
  position: relative;
  text-align:center;

  .site-title{
    width: 200px;
    margin: 0 auto;
  }

.site-header{
  .top-nav{
      float: right;
      margin-top: -2.5em;
      .nav-icon {
        font-family: FontAwesome;
        text-align: center;
        font-size: 14px;
        width: 14px;
        height: 14px;
        padding: 20px 15px;
        position: relative;
        cursor: pointer;
    }
    #nav-rss-link:before {content: "\f09e";}
    #nav-search-btn:before {content: "\f002";}
  }
}


  .site-title img{
    width: 128px;
    height: auto;
    display: block;
    -webkit-border-radius: 100%;
    border-radius: 100%;
    -webkit-box-shadow: 0 0 0 0.3618em rgba(0, 0, 0, 0.05);
    box-shadow: 0 0 0 0.3618em rgba(0, 0, 0, 0.05);
    margin: 0 auto;
    -webkit-transition: all ease 0.4s;
    -moz-transition: all ease 0.4s;
    -o-transition: all ease 0.4s;
    transition: all ease 0.4s;

    &:hover{
      position: relative;
     -webkit-transform: translateY(-0.75em);
     -moz-transform: translateY(-0.75em);
     -ms-transform: translateY(-0.75em);
     -o-transform: translateY(-0.75em);
     transform: translateY(-0.75em);
    }
  }

  .site-description{
    font-size: 1.2em;
    font-weight: 400;
    color: #555;
    margin-top: 1em;
    margin-bottom: 1em;
  }

  .main-navigation{
        line-height: 1 !important;
        border-style: solid;
        border-width: 1px 0;
        border-color: #eee;
  }

  .menu .menu-item{
    display: inline-block;
    margin: 0 10px;
  }

  .menu .menu-item a{
    color: #555;
  }

  .menu .menu-item a:hover{
    border-bottom:1px dotted #ccc;
  }

.site-nav-toggle {
  display: none;
  position: absolute;
  top: 10px;
  left: 10px;
  +mobile() {
    display: block;
  }
  button {
    margin-top: 2px;
    padding: 9px 10px;
    background: transparent;
    border: none;
  }
}
}

.use-motion {
  .brand { opacity: 0; }
  .menu-item { opacity: 0; }
  .logo-line-before i { left: -100%; }
  .logo-line-after i { right: -100%; }

  .logo, .site-title, .site-description {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
