#about {
    display:     none;
    position:    fixed;
    top:         0;
    left:        0;
    width:       100%;
    height:      100%;
    text-align:  center;
    line-height: 130%;
    overflow:    scroll;
    left: 0;
    color:  #9eabb3;

    .container {
      display: table;
      width: 100%;
      background-image: url('/images/assets/cover.jpg');
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
    }

    .content {
      display: table-cell;
      text-align: center;
      background-color: rgba(0, 0, 0, 0.6);
    }

    #about-card {
        position:      relative;
        // Position the card out the page to improve the javascript drop effect
        top:           -1000px;
        display:       block;
        background:    white;
        max-width:     400px;
        padding:       0;
        margin:        0 auto;
        border-radius: 3px;
        padding:       30px 0;
        -webkit-box-shadow: 0 0 5px rgba(0,0,0,.5);
        -moz-box-shadow: 0 0 5px rgba(0,0,0,.5);
        box-shadow: 0 0 5px rgba(0,0,0,.5);

        h4{
             font-size:1.5em;
        }

        h5,h6{
            font-size:1em;
        }

        img{
            display:inline;
        }

        #about-btn-close {
            position: absolute;
            top:      15px;
            right:    15px;
            color:    #9eabb3;
            cursor:   pointer;

            &:hover {
                color: #738691;
            }
        }


        #about-card-picture {
            width: 110px;
            height: 110px;
            border-radius: 55px;
            margin-bottom: 15px;
        }
        #about-card-name {
            margin-top:    0;
            margin-bottom: 20px;
        }
        #about-card-bio {
            padding: 0 30px;
            margin:  0 0 30px 0;
        }
        
        #profile_social h6{
            padding-bottom: 12px;
        }
        
        #profile_social a {
             color:  #9eabb3;
             font-size: 2em;
             margin: 0px 0px 0px 15px;
             line-height: 36px;

             &:hover {
                color: #738691;
            }
        }
    }
}


@media (max-width: 767px){
    #about {
        .container{
            background-image: url('/images/assets/cover_devices.jpg');
        }
    }
}






